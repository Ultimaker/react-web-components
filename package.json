{
    "name": "@ultimaker/react-web-components",
    "version": "3.0.0",
    "description": "Ultimaker's unified react component and style library for front-end web",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "directories": {
        "test": "tests"
    },
    "scripts": {
        "start": "STATIC_URL=http://localhost:9001 start-storybook -p 9001 -c .storybook",
        "build": "STATIC_URL=https://ultimaker.github.io/react-web-components build-storybook -c .storybook -o public",
        "lint": "eslint ./src/**/*.tsx",
        "lint:fix": "eslint --fix ./src/**/*.tsx",
        "prepublishOnly": "tsc",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:debug": "echo 'Open chrome://inspect to debug'; node --inspect-brk node_modules/.bin/jest --runInBand --watch"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Ultimaker/react-web-components.git"
    },
    "author": "Ultimaker",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/Ultimaker/react-web-components/issues"
    },
    "homepage": "https://github.com/Ultimaker/react-web-components#readme",
    "dependencies": {
        "@types/classnames": "^2.2.0",
        "@types/history": "^4.7.0",
        "@types/node": "^11.9.3",
        "@types/react-dom": "^16.0.7",
        "@types/react-router": "^4.0.30",
        "@types/react-router-dom": "^4.3.0",
        "classnames": "^2.2.6",
        "gettext-extractor": "^3.4.0",
        "gettext-parser": "^3.1.0",
        "lodash.debounce": "^4.0.8",
        "node-gettext": "^2.0.0",
        "node-sass": "^4.7.2",
        "react": "^16.4.2",
        "react-alice-carousel": "^1.13.0",
        "react-avatar-editor": "^11.0.4",
        "react-collapse": "^4.0.3",
        "react-date-picker": "^7.2.0",
        "react-dom": "^16.4.2",
        "react-dropzone": "^8.1.0",
        "react-motion": "^0.5.2",
        "react-player": "^1.7.0",
        "react-router-dom": "^4.1.1",
        "react-tag-autocomplete": "^5.8.0",
        "react-textarea-autosize": "^7.0.4"
    },
    "devDependencies": {
        "@babel/core": "^7.2.2",
        "@dump247/storybook-state": "^1.5.0",
        "@sambego/storybook-styles": "^1.0.0",
        "@storybook/addon-actions": "^4.0.12",
        "@storybook/addon-info": "^4.1.11",
        "@storybook/addon-knobs": "^4.1.11",
        "@storybook/addon-viewport": "^4.1.11",
        "@storybook/addons": "^4.1.11",
        "@storybook/react": "^4.1.11",
        "@types/enzyme": "^3.1.13",
        "@types/jest": "^23.3.14",
        "@types/storybook__addon-actions": "^3.0.3",
        "@types/storybook__addon-links": "^3.3.1",
        "@types/storybook__react": "^4.0.0",
        "awesome-typescript-loader": "^5.2.1",
        "babel-loader": "^8.0.5",
        "enzyme": "3.8.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "enzyme-to-json": "^3.3.4",
        "eslint": "^5.9.0",
        "eslint-config-airbnb": "^17.1.0",
        "eslint-plugin-import": "^2.14.0",
        "eslint-plugin-jsx-a11y": "^6.1.2",
        "eslint-plugin-react": "^7.11.1",
        "file-loader": "^3.0.1",
        "jest": "^23.6.0",
        "jsdom": "^13.2.0",
        "jsdom-global": "^3.0.2",
        "prop-types": "^15.7.1",
        "react-docgen-typescript-loader": "^3.0.1",
        "react-docgen-typescript-webpack-plugin": "^1.1.0",
        "react-test-renderer": "^16.4.1",
        "sass-loader": "^7.0.3",
        "storybook-addon-jsx": "^6.0.0",
        "ts-jest": "^23.10.5",
        "typescript": "^3.3.3",
        "typescript-eslint-parser": "^22.0.0",
        "webpack": "4.29.3"
    },
    "jest": {
        "coverageDirectory": "coverage",
        "collectCoverageFrom": [
            "src/**/*.tsx",
            "!src/components/icons/*.tsx",
            "!src/stories/*"
        ],
        "coverageThreshold": {
            "global": {
                "statements": 85,
                "branches": 85,
                "functions": 85,
                "lines": 85
            }
        },
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "transformIgnorePatterns": [
            "node_modules/(?!(react-web-components)/)"
        ],
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/__mocks__/testFileStub.tsx",
            "\\.(css|scss)$": "<rootDir>/src/__mocks__/emptyModule.tsx"
        },
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "setupFiles": [
            "./src/jestsetup.tsx"
        ],
        "snapshotSerializers": [
            "enzyme-to-json/serializer"
        ]
    },
    "greenkeeper": {
        "ignore": [
            "jest",
            "@types/jest"
        ]
    }
}
