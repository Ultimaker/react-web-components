{
    "name": "react-web-components",
    "version": "1.0.0",
    "description": "Ultimaker's unified react component and style library for front-end web",
    "main": "index.js",
    "directories": {
        "test": "tests"
    },
    "scripts": {
        "start": "STATIC_URL=http://localhost:9001 start-storybook -p 9001 -c .storybook",
        "build": "STATIC_URL=https://ultimaker.github.io/react-web-components build-storybook -c .storybook -o public",
        "lint": "eslint ./src/**/*.tsx",
        "lint:fix": "eslint --fix ./src/**/*.tsx",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:debug": "echo 'Open chrome://inspect to debug'; node --inspect-brk node_modules/.bin/jest --runInBand --watch"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Ultimaker/react-web-components.git"
    },
    "author": "Ultimaker",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/Ultimaker/react-web-components/issues"
    },
    "homepage": "https://github.com/Ultimaker/react-web-components#readme",
    "dependencies": {
        "@dump247/storybook-state": "^1.5.0",
        "@sambego/storybook-styles": "^1.0.0",
        "@storybook/addon-actions": "^4.0.12",
        "@storybook/addon-info": "^3.4.7",
        "@storybook/addon-knobs": "^3.4.7",
        "@storybook/addon-viewport": "^3.4.7",
        "@storybook/addons": "^3.3.0",
        "@storybook/react": "^3.2.3",
        "@types/classnames": "^2.2.0",
        "@types/history": "^4.7.0",
        "@types/node": "^8.5.2",
        "@types/react": "^16.4.8",
        "@types/react-dom": "^16.0.7",
        "@types/react-router": "^4.0.30",
        "@types/react-router-dom": "^4.3.0",
        "classnames": "^2.2.6",
        "gettext-extractor": "^3.4.0",
        "gettext-parser": "^1.3.0",
        "lodash": "^4.17.10",
        "moment": "^2.22.2",
        "node-gettext": "^2.0.0",
        "node-sass": "^4.7.2",
        "parcel-bundler": "^1.9.6",
        "parcel-plugin-json-url-loader": "^0.1.1",
        "parcel-plugin-typescript": "^1.0.0",
        "react": "^16.4.2",
        "react-alice-carousel": "^1.13.0",
        "react-avatar-editor": "^11.0.4",
        "react-collapse": "^4.0.3",
        "react-dates": "^17.0.0",
        "react-dev-utils": "^5.0.1",
        "react-dom": "^16.4.2",
        "react-dropzone": "^4.2.11",
        "react-motion": "^0.5.2",
        "react-player": "^1.7.0",
        "react-router-dom": "^4.1.1",
        "react-spring": "6.1.0",
        "react-tag-input": "^5.1.1",
        "react-textarea-autosize": "^7.0.4",
        "typescript": "^2.9.2"
    },
    "devDependencies": {
        "@babel/runtime": "^7.2.0",
        "@types/enzyme": "^3.1.13",
        "@types/jest": "^23.3.1",
        "@types/storybook__addon-actions": "^3.0.3",
        "@types/storybook__addon-links": "^3.3.1",
        "@types/storybook__react": "^3.0.7",
        "awesome-typescript-loader": "^3.4.1",
        "enzyme": "3.4.1",
        "enzyme-adapter-react-16": "^1.1.1",
        "enzyme-to-json": "^3.3.4",
        "eslint": "^5.9.0",
        "eslint-config-airbnb": "^17.1.0",
        "eslint-plugin-import": "^2.14.0",
        "eslint-plugin-jsx-a11y": "^6.1.2",
        "eslint-plugin-react": "^7.11.1",
        "file-loader": "^1.1.11",
        "jest": "^23.4.2",
        "jsdom": "^11.12.0",
        "jsdom-global": "^3.0.2",
        "react-docgen-typescript-loader": "^2.1.1",
        "react-docgen-typescript-webpack-plugin": "^1.1.0",
        "react-test-renderer": "^16.4.1",
        "sass-loader": "^7.0.3",
        "storybook-addon-jsx": "^5.3.0",
        "ts-jest": "^23.0.1",
        "typescript-eslint-parser": "^21.0.2",
        "webpack": "3.11.0"
    },
    "jest": {
        "coverageDirectory": "coverage",
        "collectCoverageFrom": [
            "src/**/*.tsx",
            "!src/components/icons/*.tsx",
            "!src/stories/*"
        ],
        "coverageThreshold": {
            "global": {
                "statements": 85,
                "branches": 85,
                "functions": 85,
                "lines": 85
            }
        },
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "transformIgnorePatterns": [
            "node_modules/(?!(react-web-components)/)"
        ],
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/__mocks__/testFileStub.tsx",
            "\\.(css|scss)$": "<rootDir>/src/__mocks__/emptyModule.tsx"
        },
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "setupFiles": [
            "./src/jestsetup.tsx"
        ],
        "snapshotSerializers": [
            "enzyme-to-json/serializer"
        ]
    }
}
