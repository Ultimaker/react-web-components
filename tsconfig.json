{
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "tmp",
    "jsx": "react",
    "lib": ["es6", "dom"],
    "rootDirs": ["src"],
    "baseUrl": "src",
    "allowJs": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "scripts"]
}