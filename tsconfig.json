{
    "compilerOptions": {
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "baseUrl": "src",
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "module": "commonjs",
        "noEmitOnError": true,
        "outDir": "dist",
        "strictBindCallApply": true,
        "sourceMap": true,
        "target": "es5"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__",
        "**/__mocks__",
        "**/stories",
        "**/jest.setup.ts"
    ]
}
